---
import BaseHead, { type Props as BaseHeadProps } from '~/components/BaseHead.astro';
import Footer from '~/components/Footer.astro';
import Main from '~/components/Main.astro';
import Navbar from '~/components/Navbar.astro';
import { DEFAULT_LOCALE } from '~/i18n/constants';
import '~/styles/global.css';

interface Props extends BaseHeadProps {}

const head = Astro.props;
---

<!doctype html>
<html lang={head.lang ?? DEFAULT_LOCALE}>
	<head>
		<slot name="before-head" />
		<BaseHead {...head} />
		<slot name="after-head" />
	</head>
	<body>
		<div class="wrapper">
			<Navbar />
			<Main><slot /></Main>
			<Footer />
		</div>
	</body>
</html>
