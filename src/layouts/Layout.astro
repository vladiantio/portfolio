---
import GradientTop from '@/components/backgrounds/GradientTop.astro';
import GradientBottom from '@/components/backgrounds/GradientBottom.astro';
import BaseHead, { type Props as BaseHeadProps } from '@/components/BaseHead.astro';
import Footer from '@/components/Footer.astro';
import Main from '@/components/Main.astro';
import Navbar from '@/components/Navbar.astro';
import '@/styles/global.css';

interface Props extends BaseHeadProps {}

const head = Astro.props;
---

<!doctype html>
<html lang={head.lang ?? 'es'}>
	<head>
		<BaseHead {...head} />
	</head>
	<body>
		<GradientTop />
		<div class="wrapper">
			<Navbar />
			<Main><slot /></Main>
			<Footer />
		</div>
		<GradientBottom />
	</body>
</html>
