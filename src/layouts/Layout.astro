---
import BaseHead, { type Props as BaseHeadProps } from '~/components/BaseHead.astro';
import Footer from '~/components/Footer.astro';
import Main from '~/components/Main.astro';
import Navbar from '~/components/Navbar.astro';
import '~/styles/global.css';
import { Snowflakes } from '~/components/backgrounds/Snowflakes';

interface Props extends BaseHeadProps {}

const head = Astro.props;
---

<!doctype html>
<html lang={head.lang ?? 'es'}>
	<head>
		<BaseHead {...head} />
	</head>
	<body>
		<div class="wrapper">
			<Navbar />
			<Main><slot /></Main>
			<Footer />
		</div>
		<Snowflakes client:load />
	</body>
</html>
