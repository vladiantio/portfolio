---
import type { ImageMetadata } from "astro";
import { Image, Picture } from "astro:assets";

interface Props {
  alt: string;
  class?: string;
  height?: number | `${number}`;
  src: ImageMetadata;
  width?: number | `${number}`;
}

const props = Astro.props;
---

{props.src.format === 'svg' ?
  <Image {...props} /> :
  <Picture {...props} formats={['avif']} />
}
