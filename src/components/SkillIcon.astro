---
import { cn } from "@/utils/cn";

interface Props {
  class?: string;
  name: string;
}

const { class: className, name: label } = Astro.props;

const icons = new Map([
  ["typescript", { className: undefined, id: "ts" }],
  ["python", { className: undefined, id: "python" }],
  ["php", { className: "p-0.5", id: "php" }],
  ["sql", { className: undefined, id: "sql" }],
  ["microsoft sql server", { className: undefined, id: "mssql" }],
  [".net", { className: undefined, id: "dotnet" }],
  ["angular", { className: "p-0.5", id: "angular" }],
  ["vue", { className: "p-0.5", id: "vue" }],
  ["bootstrap", { className: undefined, id: "bootstrap" }],
  ["jquery", { className: "p-0.5", id: "jquery" }],
  ["tailwind css", { className: "p-0.5", id: "tailwindcss" }],
  ["react", { className: "fill-[#087ea4] dark:fill-[#58c4dc]", id: "react" }],
  ["mysql", { className: "p-1", id: "mysql" }],
  ["azure", { className: "p-0.5", id: "azure" }],
  ["trello", { className: undefined, id: "trello" }],
  ["wordpress", { className: undefined, id: "wordpress" }],
  ["astro", { className: "p-0.5", id: "astro" }],
  ["laravel", { className: "p-0.5", id: "laravel" }],
]);

const icon = icons.get(label.toLowerCase());
---

<svg
  xmlns="http://www.w3.org/2000/svg"
  aria-label={label}
  class={cn(icon?.className, className)}
>
  <use href={`/icons/skills.svg?1#${icon?.id}`}></use>
</svg>
