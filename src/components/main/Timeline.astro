---
import { work, education } from '~/resume.json';
import ExternalLink from '~/components/ExternalLink.astro';
import { formatMonth } from '~/utils/date';
import { parseMD } from '~/utils/md';
import type { Locale } from '~/i18n/constants';
import { useTranslations } from '~/i18n/helpers';

const locale = Astro.currentLocale as Locale | undefined;
const translate = useTranslations(locale);
---
<section>
  <h2 class="text-primary">{translate('portfolio.experience')}</h2>
  <ol class="relative border-s-2 border-soft ms-2">
    {work.map(item => (
      <li class="mb-10 ms-6">
        <div class="absolute w-4 h-4 rounded-full mt-1 -start-2 bg-gradient-primary ring-8 ring-background"></div>
        <span class="-ms-2 px-2 py-1 bg-soft rounded-lg">{formatMonth(item.startDate, locale)} - {item.endDate.length > 0 ? formatMonth(item.endDate, locale) : translate('portfolio.present')}</span>
        <h3 class="mt-3 mb-1 text-black dark:text-white font-semibold">
          {item.url ? <ExternalLink class="external" href={item.url}>{item.name}</ExternalLink> : item.name}<span class="mx-3">·</span>{item.position}
        </h3>
        {/* <p>{item.position}</p> */}
        {item.summary && <p class="my-1 text-muted">{item.summary}</p>}
        <ul class="list-disc ms-4">
          {item.highlights.map(highlight => (
            <li class="mb-1"><Fragment set:html={parseMD(highlight)} /></li>
          ))}
        </ul>
      </li>
    ))}
  </ol>
</section>

<section>
  <h2 class="text-primary">{translate('portfolio.education')}</h2>
  <ol class="relative border-s-2 border-soft ms-2">
    {education.map(item => (
      <li class="mb-10 ms-6">
        <div class="absolute w-4 h-4 rounded-full mt-1 -start-2 bg-gradient-primary ring-8 ring-background"></div>
        <span class="-ms-2 px-2 py-1 bg-soft rounded-lg">{formatMonth(item.startDate, locale)} - {item.endDate.length > 0 ? formatMonth(item.endDate, locale) : translate('portfolio.present')}</span>
        <h3 class="mt-3 mb-1 text-black dark:text-white font-semibold">
          {item.url ? <ExternalLink class="external" href={item.url}>{item.institution}</ExternalLink> : item.institution}<span class="mx-3">·</span>{item.area}
        </h3>
      </li>
    ))}
  </ol>
</section>