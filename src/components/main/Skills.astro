---
import { skills } from '~/resume.json';
import SkillIcon from '../SkillIcon.astro';
import type { Locale } from '~/i18n/constants';
import { useTranslations } from '~/i18n/helpers';

const locale = Astro.currentLocale as Locale | undefined;
const translate = useTranslations(locale);
---
<section>
  <h2 class="text-primary">{translate('portfolio.skills')}</h2>
  
  <div>
    {skills.map(item => (
      <div class="mb-5">
        <h3 class="mb-2">{item.name}</h3>
        <div class="flex flex-wrap items-center gap-3">
          {item.keywords.map(keyword => (
            <span class="p-0 rounded-xl overflow-hidden bg-soft/50" title={keyword}>
              <span class="sr-only">{keyword}</span>
              <SkillIcon class="size-12" name={keyword} />
            </span>
          ))}
        </div>
      </div>
    ))}
  </div>
</section>