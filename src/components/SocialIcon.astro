---
interface Props {
  class?: string;
  name: string;
}

const { class: className, name } = Astro.props;

const icons = new Map([
  ["github", { id: "github", label: "GitHub" }],
  ["linkedin", { id: "linkedin", label: "LinkedIn" }],
  ["youtube", { id: "youtube", label: "YouTube" }],
  ["tiktok", { id: "tiktok", label: "TikTok" }],
  ["x", { id: "x", label: "X / Twitter" }],
  ["pinterest", { id: "pinterest", label: "Pinterest" }],
  ["bluesky", { id: "bluesky", label: "Bluesky" }],
  ["mastodon", { id: "mastodon", label: "Mastodon" }],
]);

const icon = icons.get(name);
---

<svg
  xmlns="http://www.w3.org/2000/svg"
  aria-label={icon?.label}
  class={className}
>
  <use href={`/icons/social.svg?1#${icon?.id}`}></use>
</svg>
